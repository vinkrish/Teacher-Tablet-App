<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/universal</item>
        <item name="android:textColorSecondary">@color/universal</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
    </style>

    <style name="Theme.MyActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/teal</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/teal_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/teal_light</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>
    
    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">

    <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>

    <item name="android:minHeight">20dip</item>
    <item name="android:maxHeight">20dip</item>
	</style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogSlideAnimation</item>
    </style>
    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_middle</item>
        <item name="android:windowExitAnimation">@anim/slide_middle_bottom</item>
    </style>

</resources>
