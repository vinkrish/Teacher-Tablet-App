<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_micromax" >

    <Button
        android:id="@+id/sendLocked"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:text="@string/bugs"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:onClick="sendClicked"
        android:visibility="invisible" />

    <Button
        android:id="@+id/refreshLocked"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:text="@string/resolving"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:onClick="refreshClicked"
        android:visibility="invisible" />

</RelativeLayout>