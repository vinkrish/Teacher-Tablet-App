<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:layout_gravity="center"
    android:background="#515450">

    <TextView
        android:id="@+id/classSectionSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/fltv"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/classSectionSubject"
        android:orientation="horizontal">

        <Button
            android:id="@+id/es"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/button_selector_fl"
            android:drawableLeft="@drawable/enterscore"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:onClick="callSlipTest"
            android:paddingLeft="5dp"
            android:text="@string/es"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/vs"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/button_selector_fl"
            android:drawableLeft="@drawable/enterscore"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:onClick="callViewScore"
            android:paddingLeft="5dp"
            android:text="@string/vs"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/se"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/button_selector_fl"
            android:drawableLeft="@drawable/enterscore"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:onClick="callStructuredExam"
            android:paddingLeft="5dp"
            android:text="@string/se"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    </LinearLayout>

    <Button
        android:id="@+id/view_students"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/ll"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector_fl"
        android:drawableLeft="@drawable/enterscore"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:onClick="callViewStudents"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:text="@string/view_students"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />


</RelativeLayout>