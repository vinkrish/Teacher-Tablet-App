<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#515450"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/classSectionSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fltv"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/es"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_fl"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/enterscore"
            android:gravity="start|center_vertical"
            android:onClick="callSlipTest"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:text="@string/es"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/vs"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_fl"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/enterscore"
            android:gravity="start|center_vertical"
            android:onClick="callViewScore"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/vs"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view_students"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_fl"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/enterscore"
            android:gravity="start|center_vertical"
            android:onClick="callViewStudents"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/view_students"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/se"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_fl"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/enterscore"
            android:gravity="start|center_vertical"
            android:onClick="callStructuredExam"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/se"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </LinearLayout>


</LinearLayout>