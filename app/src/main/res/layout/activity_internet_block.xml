<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/homework_background"
    tools:context="in.teacher.activity.InternetBlock">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/internet_block_1"
        android:textSize="@dimen/text_large"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif"
        android:gravity="center" />

    <Button
        android:id="@+id/steps_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingRight="5dp"
        android:background="@color/universal"
        android:text="@string/internet_block_2"
        android:gravity="center"
        android:textColor="@color/white"
        android:onClick="stepsClicked"
        android:drawableRight="@drawable/navigation_expand"/>

    <LinearLayout
        android:id="@+id/ignore_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="1."/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="@string/internet_steps_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="2."/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="@string/internet_steps_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="3."/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="@string/internet_steps_3"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/universal"
            android:textSize="@dimen/text_large"
            android:fontFamily="sans-serif"
            android:text="@string/internet_steps_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="a)"/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="@string/internet_steps_5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="b)"/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="@string/internet_steps_6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="c)"/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:text="@string/internet_steps_7"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ignore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/universal"
        android:onClick="ignoreClicked"
        android:textColor="@color/white"
        android:text="Ignore for now"/>

</LinearLayout>
