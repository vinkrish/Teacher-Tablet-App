<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/layout_black"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/dashboard"
            android:gravity="start|center_vertical"
            android:onClick="toDashbord"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/dashboard"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#333333" />

        <Button
            android:id="@+id/attendanceButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/universal"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/move"
            android:gravity="start|center_vertical"
            android:paddingEnd="30dp"
            android:paddingStart="10dp"
            android:text="@string/move_student"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#333333" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/moving_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/light_black" />

    <Button
        android:id="@+id/student_sel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/teal_border"
        android:text="@string/sel_student"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/teal_dark" />

    <TextView
        android:id="@+id/sel_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/light_black" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="*">

        <TableRow android:id="@+id/rowId">

            <Spinner
                android:id="@+id/secSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/teal_border" />

            <Button
                android:id="@+id/confirm_move"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/teal_button_selector"
                android:text="@string/confirm_move"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="15dp"
        android:text="@string/pending_move"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/light_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/layoutbelowBC"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:paddingEnd="0dp"
            android:paddingStart="15dp"
            android:text="@string/studentname"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/clas"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/from_sec"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/to_sec"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>