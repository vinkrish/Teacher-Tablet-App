<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/layout_black"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/dashboard"
            android:gravity="start|center_vertical"
            android:onClick="toDashbord"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/dashboard"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#333333" />

        <Button
            android:id="@+id/attendanceButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/universal"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/attendance"
            android:gravity="start|center_vertical"
            android:paddingEnd="30dp"
            android:paddingStart="10dp"
            android:text="@string/student_profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <LinearLayout
        android:id="@+id/lisview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/layoutbelowBC"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/slno"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/admission_no"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/studentname"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <Button
            android:id="@+id/add_student"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/teal_button_selector"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/add_student"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>