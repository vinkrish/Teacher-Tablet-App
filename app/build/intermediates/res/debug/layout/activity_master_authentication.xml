<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_micromax">

    <TextView
        android:id="@+id/deviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_xmedium" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="400dp"
        android:layout_height="395dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#66FFFFFF"
        android:orientation="vertical"></LinearLayout>

    <View
        android:id="@+id/viewlayout"
        android:layout_width="400dp"
        android:layout_height="5dp"
        android:layout_above="@id/ll"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF" />

    <LinearLayout
        android:id="@+id/centerll"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_above="@id/viewlayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_layout"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adminUserName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_field"
            android:clickable="true"
            android:gravity="center"
            android:onClick="nameClicked"
            android:text="@string/username"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/adminPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_field"
            android:clickable="true"
            android:gravity="center"
            android:onClick="passwordClicked"
            android:text="@string/password"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>

    <View
        android:id="@+id/bottomViewCenter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="@color/light_black" />

    <Button
        android:id="@+id/num0"
        android:layout_width="115dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/bottomViewCenter"
        android:background="@drawable/button_selector"
        android:text="@string/zero"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/numclear"
        android:layout_width="115dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/bottomViewCenter"
        android:background="@drawable/button_selector"
        android:onClick="clearClicked"
        android:text="@string/clear"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/num0"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/eight"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/num8"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/num8"
        android:background="@drawable/button_selector"
        android:text="@string/seven"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/num8"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/num8"
        android:background="@drawable/button_selector"
        android:text="@string/nine"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/num8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/five"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/num5"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/num5"
        android:background="@drawable/button_selector"
        android:text="@string/four"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/num5"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/num5"
        android:background="@drawable/button_selector"
        android:text="@string/six"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/num5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/two"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/num2"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/num2"
        android:background="@drawable/button_selector"
        android:text="@string/one"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/num3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/num2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/num2"
        android:background="@drawable/button_selector"
        android:text="@string/three"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@id/centerll"
        android:layout_marginBottom="20dp"
        android:textColor="@color/divider"
        android:typeface="sans"
        android:textSize="50sp"
        android:text="Admin"/>

</RelativeLayout><!-- From: file:/Users/Vidhya/Desktop/AndroidStudioProjects/Teacher/app/src/main/res/layout/activity_master_authentication.xml -->