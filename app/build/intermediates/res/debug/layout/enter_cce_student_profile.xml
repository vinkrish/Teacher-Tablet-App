<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/layout_black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:background="@color/layout_black"
            android:drawableLeft="@drawable/dashboard"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:onClick="toDashbord"
            android:paddingLeft="10dp"
            android:text="@string/dashboard"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#333333" />

        <Button
            android:id="@+id/cce_profile"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:background="@color/layout_black"
            android:drawableLeft="@drawable/attendance"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#333333" />

        <Button
            android:id="@+id/insertUpdate"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:background="@color/universal"
            android:drawableLeft="@drawable/attendance"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layoutbelowBC"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/profile_term"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="left|center"
            android:text="@string/cce_student_profile"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/dark_black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/total_days"
            android:textColor="@color/dark_black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/today_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:numeric="integer" />

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:background="@color/universal"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <LinearLayout
        android:id="@+id/lisview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/layoutbelowBC"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/width1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:paddingLeft="10dp"
            android:text="@string/slno"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:id="@+id/width2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.45"
            android:paddingLeft="10dp"
            android:text="@string/studentname"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:id="@+id/width3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/height"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:id="@+id/width4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/weight"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:id="@+id/width5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:text="@string/days_attended"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <View
            android:id="@+id/width6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></RelativeLayout>

    </ScrollView>

</LinearLayout><!-- From: file:/Users/vinkrish/StudioProjects/Teacher-Tablet-App/app/src/main/res/layout/enter_cce_student_profile.xml -->