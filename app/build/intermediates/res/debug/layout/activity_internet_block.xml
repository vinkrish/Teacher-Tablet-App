<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homework_background"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="in.teacher.activity.InternetBlock">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/internet_block_1"
        android:textSize="@dimen/text_large"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/steps_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/universal"
        android:drawableEnd="@drawable/navigation_expand"
        android:drawableRight="@drawable/navigation_expand"
        android:gravity="center"
        android:onClick="stepsClicked"
        android:text="@string/internet_block_2"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/ignore_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/one_"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/internet_steps_1"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/two_"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/internet_steps_2"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/three_"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/internet_steps_3"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/internet_steps_4"
            android:textColor="@color/universal"
            android:textSize="@dimen/text_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/a"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/internet_steps_5"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/b"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/internet_steps_6"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/c"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/internet_steps_7"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ignore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/universal"
        android:onClick="ignoreClicked"
        android:text="@string/ignore"
        android:textColor="@color/white" />

</LinearLayout>
