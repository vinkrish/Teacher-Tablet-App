<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/layout_black"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:background="@color/layout_black"
            android:drawableLeft="@drawable/dashboard"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:onClick="toDashbord"
            android:paddingLeft="10dp"
            android:text="@string/dashboard"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#333333" />

        <Button
            android:id="@+id/attendanceButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:background="@color/universal"
            android:drawableLeft="@drawable/attendance"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/es"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#333333" />

        <Button
            android:id="@+id/classSection"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:background="@color/layout_black"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/dividerup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearLayout1"
        android:background="#333333" />

    <LinearLayout
        android:id="@+id/llclasSecSub"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/dividerup" >

        <TextView
            android:id="@+id/clasSecSub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E1E1E6"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llclasSecSub"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/flgrade"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/rlgrade0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#232422"
                android:visibility="invisible" >

                <Button
                    android:id="@+id/c1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_grade"
                    android:text="@string/c1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/c1"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/c1"
                    android:background="@drawable/button_grade"
                    android:text="@string/b2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/c2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/c1"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/c1"
                    android:background="@drawable/button_grade"
                    android:text="@string/c2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/a2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_above="@id/c1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/a2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/a1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/a2"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/a2"
                    android:background="@drawable/button_grade"
                    android:text="@string/a1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/b1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/a2"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/a2"
                    android:background="@drawable/button_grade"
                    android:text="@string/b1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/e1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/c1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/e1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/d"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/e1"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/e1"
                    android:background="@drawable/button_grade"
                    android:text="@string/d"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/e2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/e1"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/e1"
                    android:background="@drawable/button_grade"
                    android:text="@string/e2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/toggleGradeMark"
                    android:layout_width="290dp"
                    android:layout_height="65dp"
                    android:layout_above="@id/a2"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/toggleGradeMark"
                    android:textSize="23sp" />

                <Button
                    android:id="@+id/previous"
                    android:layout_width="135dp"
                    android:layout_height="65dp"
                    android:layout_below="@id/e1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/previous"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="135dp"
                    android:layout_height="65dp"
                    android:layout_below="@id/e1"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/next"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_submit"
                    android:text="@string/submit"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="170dp"
                    android:background="@drawable/button_clear"
                    android:text="@string/clear"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlgrade1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#232422"
                android:visibility="invisible" >

                <Button
                    android:id="@+id/d1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_grade"
                    android:text="@string/d"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/c"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/d1"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/d1"
                    android:background="@drawable/button_grade"
                    android:text="@string/c"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/a"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_above="@id/d1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/a"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/aplus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/a"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/a"
                    android:background="@drawable/button_grade"
                    android:text="@string/aplus"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/b"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignBaseline="@id/a"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/a"
                    android:background="@drawable/button_grade"
                    android:text="@string/b"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/toggleGradeMark1"
                    android:layout_width="290dp"
                    android:layout_height="65dp"
                    android:layout_above="@id/a"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/toggleGradeMark"
                    android:textSize="23sp" />

                <Button
                    android:id="@+id/previous1"
                    android:layout_width="135dp"
                    android:layout_height="65dp"
                    android:layout_below="@id/d1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/previous"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/next1"
                    android:layout_width="135dp"
                    android:layout_height="65dp"
                    android:layout_below="@id/d1"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_grade"
                    android:text="@string/next"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/submit1"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_submit"
                    android:text="@string/submit"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/clear1"
                    android:layout_width="135dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="170dp"
                    android:background="@drawable/button_clear"
                    android:text="@string/clear"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/Vidhya/Desktop/AndroidStudioProjects/Teacher/app/src/main/res/layout/enter_score.xml -->